<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.topografia.vista.cliente.ClienteController">

    <top>
        <ToolBar>
            <Button onAction="#nuevoCliente" text="Nuevo" />
            <Button onAction="#editarCliente" text="Editar" />
            <Button onAction="#eliminarCliente" text="Eliminar" />
            <Button onAction="#cargarClientes" text="Actualizar" />
            <Label prefHeight="18.0" prefWidth="98.0" text="Buscar por:" />
           <ComboBox fx:id="cbFiltro" />
           <TextField fx:id="txtBuscar" promptText="Escribe para buscar..." />
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="tablaClientes">
            <columns>
                <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="colDireccion" prefWidth="260" text="Dirección" />
                <TableColumn fx:id="colTelefono" minWidth="0.0" prefWidth="105.60003662109375" text="Teléfono" />
                <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
                <TableColumn fx:id="colTipo" prefWidth="150" text="Tipo" />
            </columns>
        </TableView>
    </center>
</BorderPane>
