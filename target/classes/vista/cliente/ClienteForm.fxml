<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/24.0.1" 
            fx:controller="com.topografia.vista.cliente.ClienteFormController"
            fitToWidth="true">

    <VBox alignment="CENTER" prefWidth="320.0" spacing="8" 
          style="-fx-background-color: #f5f5f5;">
        
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label prefHeight="35.0" prefWidth="280.0" text="Registro de Cliente"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-alignment: center;">
        </Label>

        <!-- ================================ -->
        <!-- DATOS BÁSICOS -->
        <!-- ================================ -->
        <Label text="Datos Básicos" 
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;">
        </Label>

        <Label prefWidth="280.0" text="Nombre *" style="-fx-text-fill: #2c3e50;"/>
        <TextField fx:id="txtNombre" promptText="Nombre completo del cliente">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" text="Teléfono *" style="-fx-text-fill: #2c3e50;"/>
        <TextField fx:id="txtTelefono" promptText="10 dígitos (ej: 7711234567)">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" text="Email *" style="-fx-text-fill: #2c3e50;"/>
        <TextField fx:id="txtEmail" promptText="ejemplo@correo.com"/>
        
        <Label prefWidth="280.0" text="Tipo *" style="-fx-text-fill: #2c3e50;"/>
        <ComboBox fx:id="cbTipo" prefWidth="280.0" 
                  promptText="Seleccione un tipo de cliente">
        </ComboBox>


        <!-- ================================ -->
        <!-- DIRECCIÓN SEPARADA -->
        <!-- ================================ -->
        <Label text="Dirección" 
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>

        <Label prefWidth="280.0" text="Calle y Número" style="-fx-text-fill: #2c3e50;"/>
        <TextField fx:id="txtCalleNumero" promptText="Ej: Av. Revolución #123">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" text="Colonia" style="-fx-text-fill: #2c3e50;"/>
        <TextField fx:id="txtColonia" promptText="Nombre de la colonia">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" text="Localidad" style="-fx-text-fill: #2c3e50;"/>
        <TextField fx:id="txtLocalidad" promptText="Nombre de la localidad">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" text="Municipio" style="-fx-text-fill: #2c3e50;"/>
        <ComboBox fx:id="cbMunicipio" prefWidth="280.0" 
                  promptText="Seleccione un municipio">
        </ComboBox>

        <Label prefWidth="280.0" text="Código Postal" style="-fx-text-fill: #2c3e50;"/>
        <TextField fx:id="txtCodigoPostal" promptText="5 dígitos (ej: 42000)">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <!-- ================================ -->
        <!-- BOTONES -->
        <!-- ================================ -->
        <VBox spacing="8" alignment="CENTER">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>

            <Button onAction="#guardar" text="Guardar Cliente" 
                    prefWidth="150.0" prefHeight="35.0"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button onAction="#cancelar" text="Cancelar" 
                    prefWidth="150.0" prefHeight="30.0"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </VBox>

        <Label text="* Campos obligatorios" 
               style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>

    </VBox>

</ScrollPane>