<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.topografia.vista.cliente.ClienteFormController">

    <VBox alignment="CENTER" prefWidth="320.0" spacing="8" style="-fx-background-color: #f5f5f5;">
        
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <!-- ================================ -->
        <!-- TÍTULO -->
        <!-- ================================ -->
        <Label prefHeight="35.0" prefWidth="280.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-alignment: center;" text="Registro de Cliente">
        </Label>

        <!-- ================================ -->
        <!-- DATOS BÁSICOS -->
        <!-- ================================ -->
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Datos Básicos">
        </Label>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Nombre *" />
        <TextField fx:id="txtNombre" promptText="Nombre completo del cliente">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Teléfono *" />
        <TextField fx:id="txtTelefono" promptText="10 dígitos (ej: 7711234567)">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Email *" />
        <TextField fx:id="txtEmail" promptText="ejemplo@correo.com" />

        <!-- ================================ -->
        <!-- DIRECCIÓN SEPARADA -->
        <!-- ================================ -->
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Dirección">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Calle y Número" />
        <TextField fx:id="txtCalleNumero" promptText="Ej: Av. Revolución #123">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Colonia *" />
        <TextField fx:id="txtColonia" promptText="Nombre de la colonia">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Localidad *" />
        <TextField fx:id="txtLocalidad" promptText="Nombre de la localidad">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Municipio *" />
        <ComboBox fx:id="cbMunicipio" prefWidth="280.0" promptText="Seleccione un municipio">
        </ComboBox>

        <Label prefWidth="280.0" style="-fx-text-fill: #2c3e50;" text="Código Postal" />
        <TextField fx:id="txtCodigoPostal" promptText="5 dígitos (ej: 42000)">
            <cursor><Cursor fx:constant="TEXT" /></cursor>
        </TextField>

        <!-- ================================ -->
        <!-- BOTONES -->
        <!-- ================================ -->
        <VBox alignment="CENTER" spacing="8">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>

            <Button onAction="#guardar" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar Cliente" />

            <Button onAction="#cancelar" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Cancelar" />
        </VBox>

        <Label style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;" text="* Campos obligatorios">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>

    </VBox>

</ScrollPane>
