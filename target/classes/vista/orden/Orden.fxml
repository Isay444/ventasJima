<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.topografia.vista.orden.OrdenController">

    <top>
        <ToolBar>
            <Button onAction="#nuevaOrden" text="Nueva Orden" />
            <Button onAction="#editarOrden" text="Editar Orden" />
            <Button onAction="#eliminarOrden" text="Eliminar Orden" />
            <Button onAction="#cargarOrdenes" text="Actualizar" />
           <Label prefHeight="18.0" prefWidth="98.0" text="Buscar por:" />
           <ComboBox fx:id="cbFiltro" />
           <TextField fx:id="txtBuscar" promptText="Escribe para buscar..." />
        </ToolBar>
    </top>
    
    <HBox spacing="10" />

    <center>
        <TableView fx:id="tablaOrdenes">
            <columns>
                <TableColumn fx:id="colId" prefWidth="40" text="# Orden" />
                <TableColumn fx:id="colFecha" prefWidth="100" text="Fecha" />
                <TableColumn fx:id="colCliente" prefWidth="100" text="Cliente" />
                <TableColumn fx:id="colServicio" prefWidth="100" text="Servicio" />
                <TableColumn fx:id="colIngeniero" prefWidth="100" text="Ingeniero" />
                <TableColumn fx:id="colSubTerreno" prefWidth="100" text="Terreno" />
                <TableColumn fx:id="colMunicipio" prefWidth="100" text="Municipio" />
                <TableColumn fx:id="colZonaEjidal" prefWidth="100" text="Zona Ejidal" />
                <TableColumn fx:id="colUsuario" prefWidth="100" text="Usuario que registrÃ³" />
                <TableColumn fx:id="colObservaciones" prefWidth="100" text="Observaciones" />
                <TableColumn fx:id="colMontoTotal" prefWidth="100" text="Total" />
                <TableColumn fx:id="colSaldoRestante" prefWidth="120" text="Saldo Restante" />
                <TableColumn fx:id="colFechaLevantamiento" prefWidth="120" text="Fecha Levantamiento" />
                <TableColumn fx:id="colFechaEntregaPlano" prefWidth="120" text="Entrega Plano" />
                <TableColumn fx:id="colEstatus" prefWidth="120" text="Estatus" />
                <TableColumn fx:id="colSolicitaFactura" prefWidth="120" text="Factura" />
                <TableColumn fx:id="colEstadoPlano" text="Plano" prefWidth="100.0" />
                
                <TableColumn fx:id="colVerRecibos" text="Recibos" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
