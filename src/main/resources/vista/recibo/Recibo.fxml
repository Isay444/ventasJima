<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.topografia.vista.recibo.ReciboController"
      spacing="10">
    <padding> 
        <Insets top="10" right="10" bottom="10" left="10" />  
    </padding>

    <ToolBar>
        <Button onAction="#nuevoRecibo" text="Nuevo Recibo" />
        <Button onAction="#editarRecibo" text="Editar Recibo" />
        <Button onAction="#eliminarRecibo" text="Eliminar Recibo" />
        <Button onAction="#cargarRecibos" text="Actualizar" />
        <Label prefHeight="18.0" prefWidth="98.0" text="Buscar por:" />
        <ComboBox fx:id="cbFiltro" />
        <TextField fx:id="txtBuscar" promptText="Escribe para buscar..." />
    </ToolBar>

    <TableView fx:id="tablaRecibos" prefHeight="400">
        <columns>
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="100"/>
            <TableColumn fx:id="colMonto" text="Monto" prefWidth="100"/>
            <TableColumn fx:id="colTipoPago" text="Tipo de Pago" prefWidth="120"/>
            <TableColumn fx:id="colMetodoPago" text="MÃ©todo de Pago" prefWidth="120"/>
            <TableColumn fx:id="colConfirmado" text="Confirmado" prefWidth="100"/>
            <TableColumn fx:id="colOrden" text="Orden" prefWidth="100"/>
            <TableColumn fx:id="colCliente" text="Cliente" prefWidth="150"/>
            <TableColumn fx:id="colVerOrden" text="Ver Orden" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>


