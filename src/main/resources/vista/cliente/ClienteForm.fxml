<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="347.0" prefWidth="258.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" 
      fx:controller="com.topografia.vista.cliente.ClienteFormController">
    
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <Label prefHeight="30.0" prefWidth="171.0" text="Ingresa los datos del Cliente">
      <font>
         <Font name="Microsoft YaHei UI Bold" size="12.0" />
      </font>
   </Label>

    <Label prefWidth="235.0" text="Nombre" />
    <TextField fx:id="txtNombre">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>

    <Label prefWidth="235.0" text="Dirección" />
    <TextField fx:id="txtDireccion">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>

    <Label prefWidth="235.0" text="Teléfono" />
    <TextField fx:id="txtTelefono">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor></TextField>

    <Label prefWidth="235.0" text="Email" />
    <TextField fx:id="txtEmail" />

    <Button onAction="#guardar" text="Guardar" />
   <opaqueInsets>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </opaqueInsets>
</VBox>
