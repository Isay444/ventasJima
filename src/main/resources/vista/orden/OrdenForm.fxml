<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="520" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" 
            fx:controller="com.topografia.vista.orden.OrdenFormController">

    <center>
        <GridPane hgap="10" vgap="10">
            <!-- Padding correcto -->
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Que la columna 1 (la de los campos) se estire -->
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="cbCliente" promptText="Selecciona cliente" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Servicio:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="cbServicio" promptText="Selecciona servicio" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Ingeniero:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="cbIngeniero" promptText="Asignar ingeniero" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Subtipo Terreno:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="cbSubtipoTerreno" promptText="Selecciona subtipo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Municipio:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="cbMunicipio" promptText="Selecciona municipio" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Zona Ejidal:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ComboBox fx:id="cbZonaEjidal" promptText="Selecciona zona" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <ComboBox fx:id="cbUsuario" promptText="Usuario que registra" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label text="Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <DatePicker fx:id="dpFecha" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></DatePicker>

            <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <TextField fx:id="txtEstado" promptText="Pendiente" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            <TextArea fx:id="txtObservaciones" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="9" />

            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10">
                <Button onAction="#guardarOrden" text="Guardar" />
                <Button onAction="#cancelar" text="Cancelar" />
            <GridPane.margin>
               <Insets top="10.0" />
            </GridPane.margin>
            </HBox>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
</BorderPane>
