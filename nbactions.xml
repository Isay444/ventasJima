<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <!-- Ejecutar (Run) -->
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
    </action>

    <!-- Depurar (Debug) -->
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
        <properties>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>

    <!-- Perfilado (Profile) -->
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
    </action>
</actions>

